<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Controle de Imoveis</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Web Imoveis", "Index", "CadUsuario", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="tabContent_financial" class="dropdown-toggle" data-toggle="dropdown">
                                Cadastros
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Gerenciar Anuncios", "Indexx", "CadAnuncio")</li>
                                <li>@Html.ActionLink("Contratos de Alugueis", "LancPerdaProdutos", "Operacao")</li>
                                <li>@Html.ActionLink("Tipo de imoveis", "Index", "CadTipoImovel")</li>
                                <li class="nav-divider"></li>
                                <li>@Html.ActionLink("Paises", "Index", "CadPais")</li>
                                <li>@Html.ActionLink("Estados", "Index", "CadEstado")</li>
                                <li>@Html.ActionLink("Cidades", "Index", "CadCidade")</li>
                                <li>@Html.ActionLink("Bairro", "Index", "CadBairro")</li>
                                <li class="nav-divider"></li>
                                @if (User.IsInRole("Operacional"))
                                {
                                    <li>@Html.ActionLink("Perfis de Usuarios", "Index", "CadPerfil")</li>
                                }

                                <li>@Html.ActionLink("Usuarios", "Index", "CadUsuario")</li>
                            </ul>
                        </li>
                        <li>
                            <a href="tabContent_financial" class="dropdown-toggle" data-toggle="dropdown">
                                Operacional
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Consulta de Proprietario", "", "Operacao")</li>
                                <li>@Html.ActionLink("Consulta de Ficha", "", "Operacao")</li>
                            </ul>
                        </li>
                        <li>
                            <a href="tabContent_financial" class="dropdown-toggle" data-toggle="dropdown">
                                Relatorios
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Casa Alugadas", "", "Relatorio")</li>
                                <li>@Html.ActionLink("Anuncios", "Index", "RelatAnuncios")</li>
                                <li>@Html.ActionLink("Consultas", "", "Relatorio")</li>
                            </ul>
                        </li>
                        <li>
                            <a href="tabContent_financial" class="dropdown-toggle" data-toggle="dropdown">
                                Gráficos
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Pagamento do Mes", "PerdaMes", "Grafico")</li>
                                <li>@Html.ActionLink("Alugueis", "EntradaSaidaMes", "Grafico")</li>
                            </ul>
                        </li>
                    </ul>

                    using (Html.BeginForm("LogOff", "Conta", FormMethod.Post, new { id = "logoffForm" }))
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="tabContent_financial" class="dropdown-toggle" data-toggle="dropdown">
                                    @User.Identity.Name
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Alteração de senha", "AlterarSenhaUsuario", "Conta")</li>
                                </ul>
                            </li>
                            <li><a href="javascript:document.getElementById('logoffForm').submit()"> sair</a></li>
                        </ul>
                    }
                }
                else
                {
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Web Imoveis", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <ul class="nav navbar-nav navbar-left">
                        <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                        <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Login", "login", "Conta")</li>
                    </ul>
                }



            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
